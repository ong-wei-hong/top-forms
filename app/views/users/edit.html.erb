<h1>Edit user:</h1><br>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this post from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user do |form| %>
  <%= label(:user, :username, "Your username here:") %><br>
  <%= text_field(:user, :username, placeholder: "Username") %><br>
  <%= label(:user, :email, "Your email here:") %><br>
  <%= text_field(:user, :email, placeholder: "Email") %><br>
  <%= label(:user, :password, "Your password here:") %><br>
  <%= password_field(:user, :password, placeholder: "Password") %><br>
  <%= form.submit %>
<% end %>
